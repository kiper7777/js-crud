{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  {{#with data}}
    <section class='main_content'>
      <header class='header'>
        <h1 class='header_title'>Моя бібліотека</h1>
        <div class='header_icons'>
          <a href='/spotify-search' class='header_icon'>
            <img
              src='/svg/search.svg'
              alt='search'
              class='icon'
            />
          </a>
          <a href='/spotify-choose' class='header_icon'>
            <img
              src='/svg/icon-add.svg'
              alt='add'
              class='icon'
            />
          </a>
        </div>
      </header>

      <ul class='playlist_list'>
        {{#each list}}
          <a
            href='/spotify-track-add?playlistId={{id}}'
            class='playlist_item'
          >
            <li class='playlist_content'>
              <img
                src='{{image}}'
                alt=''
                class='playlist_image'
              />
              <strong class='title'>{{name}}</strong>
              <p class='text'>{{amount}} пісень</p>
            </li>
          </a>
        {{/each}}
      </ul>
    </section>
  {{/with}}
</main>

