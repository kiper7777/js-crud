  <section>
    <div class='form'>
      <h1 class='form_title'>Редагування товару</h1>
      {{#with data}}
        <form method='POST' action='/product-edit'>
          <div class='form_content'>
            <div class='form_field'>
              <label for='id' class='form_label'>ID</label>
              <input
                type='id'
                name='id'
                class='form_input'
              />
            </div>
            
            <div class='form_field'>
              <label for='name' class='form_label'>Назва
                товару</label>
              <input
                type='name'
                name='name'
                class='form_input'
              />
            </div>

            <div class='form_field'>
              <label
                for='email'
                class='form_label'
              >Ціна</label>
              <input
                type='price'
                name='price'
                class='form_input'
              />
            </div>
            
            <div class='form_field'>
              <label for='email' class='form_label'>Короткий
                опис товару</label>
              <input
                type='description'
                name='description'
                class='form_input'
              />
            </div>
            <p>Відображується у картці товару</p>
            <button
              href='/product-edit'
              class='form_button'
            >Зберегти оновлення</button>
            <a href='/product-delete?id={{id}}' class='form_button'>Видалити товар</a>
          </div>
        </form>
      {{/with}}
    </div>
  </section>
</main>

