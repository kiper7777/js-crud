{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  {{#with data}}
    <div class='main_content'>
      <h1 class='title title-center'>Пошук плейлиста</h1>

      <form
        method='POST'
        action='/spotify-search'
        class='search'
      >
        <img src='svg/spotify-search.svg' />
        <input
          type='search'
          class='search_input'
          placeholder='Введіть запит'
          name='value'
          value='{{value}}'
        />
        <button class='search-button'>Пошук</button>
      </form>

      <ul class='playlist_list'>
        {{#each list}}
          <li class='playlist'>
            <img
              src='{{image}}'
              alt='{{name}}'
              height='100px'
            />
            <div class='playlist_content'>
              <strong
                class='playlist_name'
              >{{name}}</strong>
              <span class='playlist_amount'>Кількість
                пісень:
                {{amount}}</span>
            </div>
          </li>
        {{/each}}
      </ul>

    </div>
  {{/with}}
</main>

