<main>
  <section>
    <div class='form'>
      <h1 class='form_title'>Створення товару</h1>
      <form method='POST' action='/product-create'>
        <div class='card'>
          <div class='form_content'>
            <h2>Інформація про товар</h2>
            <div class='form_field'>
              <label for='name' class='form_label'>Назва
                товару</label>
              <input
                type='name'
                name='name'
                class='form_input'
              />
            </div>

            <div class='form_field'>
              <label
                for='price'
                class='form_label'
              >Ціна</label>
              <input
                type='price'
                name='price'
                class='form_input'
              />
            </div>
            <div class='form_field'>
              <label
                for='description'
                class='form_label'
              >Короткий опис товару</label>
              <input
                type='description'
                name='description'
                class='form_input'
              />
            </div>
            <p>Відображається у карточці товару</p>
            <button class='form_button'>Створити товар</button>
          </div>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form_title'>Список товарів</h1>
      <div class='product-list'>
        {{#with data.products}}
          {{#if isEmpty}}
            <mark>Список товарів пустий</mark>
          {{else}}
            <ul>
              {{#each list}}
                <li>{{name}}
                  |
                  {{price}}
                  |
                  {{description}}
                  <a
                    href='/product-delete?id={{id}}'
                  >(видалити)</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form_title'>Оновити пошту користувача</h1>
      <form method='POST' action='/user-update'>
        <div class='form_content'>
          <div class='form_field'>
            <label for='id' class='form_label'>ID:</label>
            <input type='id' name='id' class='form_input' />
          </div>
          <div class='form_field'>
            <label for='email' class='form_label'>Нова email
              адреса:</label>
            <input
              type='email'
              name='email'
              class='form_input'
            />
          </div>
          <div class='form_field'>
            <label
              for='password'
              class='form_label'
            >Пароль:</label>
            <input
              type='password'
              name='password'
              class='form_input'
            />
          </div>
          <button class='form_button'>Відправити</button>
        </div>
      </form>
    </div>
  </section>f
</main>

